# fastlane configuration for iOS CD
# most build logic is in .github/workflows/ios-cd.yml

default_platform(:ios)

BUNDLE_ID = ENV["IOS_BUNDLE_ID"]
TEAM_ID = ENV["APPLE_DEVELOPER_TEAM_ID"] || "399WY8X9HY"

platform :ios do
  desc "Check bundle ID and app record"
  lane :check_app do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_P8"],
      is_key_content_base64: false
    )

    require 'spaceship'
    Spaceship::ConnectAPI.token = Spaceship::ConnectAPI::Token.from(hash: api_key)

    bundle_id = Spaceship::ConnectAPI::BundleId.find(BUNDLE_ID, includes: nil)
    if bundle_id
      UI.success("Bundle ID #{BUNDLE_ID} exists")
    else
      UI.error("Bundle ID #{BUNDLE_ID} not found")
    end

    app = Spaceship::ConnectAPI::App.find(BUNDLE_ID)
    if app
      UI.success("App record exists: #{app.name} (#{app.bundle_id})")
    else
      UI.message("App record not found - will be created on first upload")
    end
  end

  desc "Setup certificates and profiles (readonly)"
  lane :setup_certs do
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_P8"],
      is_key_content_base64: false
    )

    match(
      type: "appstore",
      app_identifier: [BUNDLE_ID],
      team_id: TEAM_ID,
      git_url: ENV["APPLE_CODE_SIGNING_GIT_URL"] || "git@github.com:tamagui/takeout2.git",
      git_branch: "match",
      readonly: true
    )
  end

  desc "Create/sync certificates and profiles (writes to match repo)"
  lane :sync_certs do
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_P8"],
      is_key_content_base64: false
    )

    match(
      type: "appstore",
      app_identifier: [BUNDLE_ID],
      team_id: TEAM_ID,
      git_url: ENV["APPLE_CODE_SIGNING_GIT_URL"] || "git@github.com:tamagui/takeout2.git",
      git_branch: "match",
      readonly: false
    )
  end
end
